<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Banco UNI</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="icon" type="image/png" href="/icono.png" />
  </head>
  <style>
    html {
      font-size: 14px;
    }
  </style>
  <body class="bg-light min-vh-100">
    <div
      class="container d-flex align-items-center justify-content-center"
      style="padding-top: 48px; padding-bottom: 48px; height: 90vh"
    >
      <div class="card shadow p-4" style="max-width: 400px; width: 100%">
        <div class="text-center mb-4">
          <h2 class="fw-bold">Banco UNI</h2>
          <p class="text-muted">Crea tu cuenta</p>
        </div>
        <% if (error) { %>
        <div class="alert alert-danger py-2"><%= error %></div>
        <% } %>
        <form id="form-step1">
          <div class="mb-3">
            <label for="dni" class="form-label">DNI</label>
            <div class="input-group">
              <input
                type="text"
                class="form-control"
                id="dni"
                name="dni"
                required
                maxlength="8"
                pattern="\\d{8}"
                placeholder="Ingrese su DNI"
                autofocus
              />
              <button
                class="btn btn-outline-primary"
                type="button"
                id="btnBuscarDni"
              >
                Buscar
              </button>
            </div>
          </div>
          <div class="mb-3">
            <label for="nombre" class="form-label">Nombre</label>
            <input
              type="text"
              class="form-control"
              id="nombre"
              name="nombre"
              readonly
              required
            />
          </div>
          <div class="mb-3">
            <label for="apellido" class="form-label">Apellido</label>
            <input
              type="text"
              class="form-control"
              id="apellido"
              name="apellido"
              readonly
              required
            />
          </div>
          <button
            type="button"
            class="btn btn-primary w-100"
            id="btnSiguiente"
            disabled
          >
            Siguiente
          </button>
        </form>
        <form id="form-step2" style="display: none">
          <div class="mb-3">
            <label for="usuario" class="form-label">Usuario</label>
            <input
              type="text"
              class="form-control"
              id="usuario"
              name="usuario"
              required
            />
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Contraseña</label>
            <input
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            />
          </div>
          <div class="mb-3">
            <label for="confirmar" class="form-label"
              >Confirmar contraseña</label
            >
            <input
              type="password"
              class="form-control"
              id="confirmar"
              name="confirmar"
              required
            />
          </div>
          <input type="hidden" id="dni2" name="dni" />
          <input type="hidden" id="nombre2" name="nombre" />
          <input type="hidden" id="apellido2" name="apellido" />
          <button type="submit" class="btn btn-success w-100">
            Registrarse
          </button>
        </form>
        <div class="mt-3 text-center">
          <span>¿Ya tienes cuenta? <a href="/login">Inicia sesión</a></span>
        </div>
      </div>
    </div>
    <footer
      class="bg-light text-muted py-1 border-top"
      style="height: 5vh; position: absolute; bottom: 0; width: 100%"
    >
      <div class="container d-flex justify-content-between align-items-center">
        <span>v1.0.0</span>
        <span
          >Derechos reservados
          <a
            href="https://github.com/shifu222"
            target="_blank"
            class="text-decoration-none"
            >shifu222</a
          ></span
        >
      </div>
    </footer>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      // Paso 1: Buscar DNI y habilitar Siguiente
      document
        .getElementById("btnBuscarDni")
        .addEventListener("click", async function () {
          const dni = document.getElementById("dni").value;
          if (!/^\d{8}$/.test(dni)) {
            Swal.fire({
              icon: "warning",
              title: "DNI inválido",
              text: "Ingrese un DNI válido de 8 dígitos",
              timer: 2000,
              showConfirmButton: false,
            });
            return;
          }
          Swal.fire({
            title: "Buscando...",
            text: "Consultando datos del DNI",
            allowOutsideClick: false,
            didOpen: () => {
              Swal.showLoading();
            },
          });
          try {
            const res = await fetch(`/dni?dni=${dni}`);
            Swal.close();
            if (res.ok) {
              const data = await res.json();
              document.getElementById("nombre").value = data.nombres || "";
              document.getElementById("apellido").value = data.apellidos || "";
              if (data.nombres && data.apellidos) {
                document.getElementById("btnSiguiente").disabled = false;
              } else {
                document.getElementById("btnSiguiente").disabled = true;
                Swal.fire({
                  icon: "error",
                  title: "No se encontró el DNI",
                  timer: 2000,
                  showConfirmButton: false,
                });
              }
            } else {
              document.getElementById("nombre").value = "";
              document.getElementById("apellido").value = "";
              document.getElementById("btnSiguiente").disabled = true;
              Swal.fire({
                icon: "error",
                title: "No se encontró el DNI",
                timer: 2000,
                showConfirmButton: false,
              });
            }
          } catch {
            Swal.close();
            document.getElementById("btnSiguiente").disabled = true;
            Swal.fire({
              icon: "error",
              title: "Error consultando el DNI",
              timer: 2000,
              showConfirmButton: false,
            });
          }
        });

      // Paso 1: Siguiente -> mostrar paso 2
      document
        .getElementById("btnSiguiente")
        .addEventListener("click", function () {
          // Copiar datos a los campos ocultos del paso 2
          document.getElementById("dni2").value =
            document.getElementById("dni").value;
          document.getElementById("nombre2").value =
            document.getElementById("nombre").value;
          document.getElementById("apellido2").value =
            document.getElementById("apellido").value;
          document.getElementById("form-step1").style.display = "none";
          document.getElementById("form-step2").style.display = "block";
        });

      // Paso 2: Enviar registro
      document
        .getElementById("form-step2")
        .addEventListener("submit", async function (e) {
          e.preventDefault();
          const form = e.target;
          const data = {
            dni: form.dni.value,
            nombre: form.nombre.value,
            apellido: form.apellido.value,
            usuario: form.usuario.value,
            password: form.password.value,
            confirmar: form.confirmar.value,
          };
          const res = await fetch("/register", {
            method: "POST",
            headers: { "Content-Type": "application/x-www-form-urlencoded" },
            body: new URLSearchParams(data),
          });
          if (res.redirected) {
            localStorage.setItem("mensaje", "Usuario creado correctamente");
            window.location.href = res.url;
          } else {
            window.location.reload();
          }
        });
    </script>
  </body>
</html>
